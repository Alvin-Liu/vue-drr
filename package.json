{
  "name": "vue-drr",
  "version": "1.0.9",
  "description": "A Vue2 component for draggable, resizable, rotatable elements",
  "author": "alvin-liu <642451695@qq.com>",
  "main": "./dist/vue-drr.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config build/webpack.dev.conf.js --hot",
    "build": "npm run build:demo && npm run build:public",
    "build:public": "cross-env NODE_ENV=production webpack --config build/webpack.pub.conf.js --progress --hide-modules",
    "build:demo": "cross-env NODE_ENV=production webpack --config build/webpack.demo.conf.js --progress --hide-modules"
  },
  "keywords": [
    "vue",
    "drr",
    "drag",
    "resize",
    "rotate",
    "draggable",
    "resizable",
    "rotatable"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alvin-Liu/vue-drr"
  },
  "dependencies": {
    "vue": "^2.5.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.4",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^3.1.0",
    "node-sass": "^4.8.3",
    "optimize-css-assets-webpack-plugin": "^4.0.0",
    "sass-loader": "^6.0.7",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "vue-loader": "^13.0.5",
    "vue-template-compiler": "^2.4.4",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.0"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
